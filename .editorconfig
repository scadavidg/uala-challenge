root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{kt,kts}]
indent_style = space
indent_size = 4
max_line_length = 120
ktlint_code_style = android_studio
ktlint_standard_fun-naming = disabled
ktlint_standard_no-wildcard-imports = disabled
